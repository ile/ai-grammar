{
	"manifest_version": 3,
	"name": "AI Grammar Check",
	"version": "1.0.1",
	"description": "Check grammar using AI. Use via context menu or the launch dialog.",
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"custom-elements-polyfill.js",
				"overlay.js"
			],
			"run_at": "document_end",
			"all_frames": false
		}
	],
	"permissions": [
		"storage",
		"scripting",
		"activeTab",
		"contextMenus"
	],
	"host_permissions": [
		"<all_urls>",
		"https://generativelanguage.googleapis.com/*"
	],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}